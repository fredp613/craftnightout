<div class="row-fluid">
	<h3>New Subscriber</h3>
	<form method="post" action="/subscribers/create"> 
	
		<div class="form-group">
			<input type="hidden" name="_csrf" value={{csrfToken}} />
		</div>

		<div class="form-group">
			<input type="text" class="form-control" name="email" id="txtEmail" placeholder="Email" required=true></input>
		</div>

		<div class="form-group">
			<input type="text" class="form-control" name="fullname" id="txtFullname" placeholder="Your name" required=true></input>
		</div>
		<div class="form-group">
			<input type="submit" id="submit" value='Subscribe'></input>
		</div>
	
	</form>
</div>
