
<section id="features" class="features">
<div class="row-fluid">
	<a class="btn btn-primary" href="/admins/eventcategories/new">Add New Event Category</a>
</div>
	{{#if eventcategories}}
				<div class="row">
					<div class="col-lg-12 text-center">
						<div class="section-heading">
							<h2>Event Categories</h2>
							<hr>
						</div>
					</div>
				</div>
		{{#each eventcategories}}
				<div style="margin:10px;border-style:solid;border-width:0.1px;padding:5px;border-color:grey">
					<span>{{name}}</span>					
					<a href="/admins/eventcategories/edit/{{_id}}" class="btn btn-info">Edit</a>
					<a href="/admins/eventcategories/destroy/{{_id}}" class="btn btn-danger">Destroy</a>
				</div>
		{{/each}}
	{{/if}}
</section>



