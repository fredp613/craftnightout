
    <section id="features" class="features">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-heading">
                        <h2>All Events.</h2>
                        <p class="text-muted">Select an event below to view additional details</p>
                        <hr>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="container-fluid">
                        <div class="row">

						{{#each events}}
                            <div class="col-md-6">
                               <div class="feature-item">
                                    <i class="icon-present text-primary"></i>
                                    <h3>{{title}}</h3>
                                    <p class="text-muted">{{description}}</p>
                                </div>
                            </div>
						{{/each}}
                        </div>
                </div>
            </div>
    </section>
