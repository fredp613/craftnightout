

<div class="row-fluid">
<h2>New User? <a href="/users/register" class="btn btn-primary">Register</a></h2>
<h3>Login</h3>
	<form method='post'> 

	  {{#if error }}		
		<p>
			<strong>{{error}}</strong>
		</p>  
	  {{/if}}
	  <input type="hidden" name="_csrf" value={{csrfToken}} />
      <div class="form-group">
	  	<input type="text" name='email' id="txtLogin" placeholder="email" required=true></input>
	  </div>
      <div class="form-group">
	  	<input type="password" name='password' id="txtPassword" placeholder="password" required=true></input>
	  </div>
      <div class="form-group">
	  	<input type="submit" class="btn btn-primary" id="submit" value='submit'></input>
	  </div>

	</form>
</div>
